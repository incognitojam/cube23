{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "cmake-build-debug",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build cube23",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "cmake-build-debug",
                "--target",
                "cube23",
                "-j",
                "10"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "configure cmake",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
