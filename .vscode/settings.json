{
    "cmake.buildDirectory": "${workspaceFolder}/cmake-build-debug",
    "cmake.generator": "Ninja",
    "cmake.configureArgs": [
        "-DCMAKE_BUILD_TYPE=Debug"
    ],
    "cmake.defaultVariants": {
        "buildType": "debug"
    },
    "cmake.parallelJobs": 10,
    "files.associations": {
        "*.vert": "glsl",
        "*.frag": "glsl",
        "*.geom": "glsl",
        "*.comp": "glsl"
    }
}
